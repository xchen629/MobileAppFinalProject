<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompletedTaskActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/completedTasks_rv"
        android:layout_width="406dp"
        android:layout_height="556dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compledTasks_tv"
        app:layout_constraintVertical_bias="0.051"
        tools:listitem="@layout/row_item" />

    <TextView
        android:id="@+id/compledTasks_tv"
        android:layout_width="322dp"
        android:layout_height="66dp"
        android:layout_marginTop="28dp"
        android:text="These are your completed tasks, tap to view description or hold down on the task if you want to delete it"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/taskList"
        android:layout_width="81dp"
        android:layout_height="49dp"
        android:layout_marginTop="36dp"
        android:text="Task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/compledTasks_tv"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>